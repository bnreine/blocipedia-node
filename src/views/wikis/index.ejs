<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">

      <% include ../static/partials/messages.ejs %>


      <h1>Wikis</h1>
      <a href="/wikis/new" class="btn btn-success">New Wiki</a>


      <h2>Public Wikis<h2>

      <ul class="list-group">
        <% if(wikis && wikis.publicWikis){ %>
          <% wikis.publicWikis.forEach((wiki) => { %>

            <li class="list-group-item">
              <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
            </li>
            <% }) %>
          <% } %>
      </ul>

      <hr>

      <h2>Private Wikis<h2>

      <ul class="list-group">
        <% if(wikis && wikis.privateWikis){ %>
          <% wikis.privateWikis.forEach((wiki) => { %>

            <li class="list-group-item">
              <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
            </li>
          <% }) %>
        <% } %>

      </ul>



    </main>
  </body>
</html>
